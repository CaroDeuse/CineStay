<%= simple_form_for villa do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :movie_genre, collection: ["Action", "Adventure", "Animation", "Fantasy", "Horror", "Sci-Fi", "Thriller", "Western"] %>
  <%= f.input :description %>
  <%= f.input :price_per_night %>
  <%= f.input :guests_number %>
  <%= f.input :inspired_by %>
  <%= f.input :photo, as: :file %>
  <%= f.submit class:"my-btn prim" %>
<% end %>
