<%= simple_form_for villa do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :movie_genre, collection: ["Action", "Comedy", "Drama", "Fantasy", "Horror", "Sci-Fi", "Romance", "Thriller", "Documentary", "Animation"] %>
  <%= f.input :description %>
  <%= f.input :price_per_night %>
  <%= f.input :guests_number %>
  <%# the user needs to be able to add picture -> cloudinary & active storage%>
  <%= f.submit class:"my-btn prim" %>
<% end %>


